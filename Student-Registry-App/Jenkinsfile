pipeline {
    agent docker { image 'node:22-alpine3.19' }
    
    stages {
        stage('Pull Repo') {
            steps {
                git branch: 'jenkinsfile', url: 'https://github.com/Dan-Mihaylov/DevOps'
            }
        }

        stage('Install Dependencies') {
            steps {
                dir('Student-Registry-App') {
                  sh 'ls'
                }
            }
        }

        stage('Test Application') {
            steps {
                dir ('Student-Registry-App') {
                  sh 'ls'
                }
            }
        }
    }

    post {
        always {
            echo 'Cleaning up workspace...'
            cleanWs()
        }
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}
