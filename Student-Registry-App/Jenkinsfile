pipeline {
    agent any
    
    stages {
        stage('Pull Repo') {
            steps {
                git branch: 'jenkinsfile', url: 'https://github.com/Dan-Mihaylov/DevOps'
            }
        }

        stage('Install Node.js') {
            steps {
                script {
                    def nodeHome = tool name: 'NodeJS_22.x', type: 'NodeJS'
                    env.PATH = "${nodeHome}/bin:${env.PATH}"
                }
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'cd Student-Registry-App'
                sh 'npm install'
            }
        }

        stage('Test Application') {
            steps {
                sh 'cd Student-Registry-App'
                sh 'npm test'
            }
        }
    }

    post {
        always {
            echo 'Cleaning up workspace...'
            cleanWs()
        }
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}
